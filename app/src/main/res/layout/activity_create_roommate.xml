<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateRoommateActivity">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="10dp"
        android:text="Time Wake Up:"
        android:textSize="18sp"
        android:typeface="serif"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/rgDrinking" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="10dp"
        android:text="Room Use:"
        android:textSize="18sp"
        android:typeface="serif"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/tvCreateRoommateProfile" />

    <RadioGroup
        android:id="@+id/rgDrinking"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <RadioButton
            android:id="@+id/rbDYes"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Yes"
            android:textColorHighlight="#57b5ac"
            android:textColorLink="#57b5ac"
            android:typeface="serif" />

        <RadioButton
            android:id="@+id/rbDSometimes"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Sometimes"
            android:textColorHighlight="#57b5ac"
            android:textColorLink="#57b5ac"
            android:typeface="serif" />

        <RadioButton
            android:id="@+id/rbDNo"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="No"
            android:textColorHighlight="#57b5ac"
            android:textColorLink="#57b5ac"
            android:typeface="serif" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginTop="10dp"
        android:text="Drinking:"
        android:textSize="18sp"
        android:typeface="serif"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/rgCleanliness" />

    <TextView
        android:id="@+id/tvCreateRoommateProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Create Roommate Profile"
        android:textSize="28sp"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView24" />

    <RadioGroup
        android:id="@+id/rgCleanliness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <RadioButton
            android:id="@+id/rbOrganized"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Organized"
            android:textColorHighlight="#57b5ac"
            android:textColorLink="#57b5ac"
            android:typeface="serif" />

        <RadioButton
            android:id="@+id/rbCasual"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Casual"
            android:textColorHighlight="#57b5ac"
            android:textColorLink="#57b5ac"
            android:typeface="serif" />

        <RadioButton
            android:id="@+id/rbOccMessy"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Occasionally Messy"
            android:textColorHighlight="#57b5ac"
            android:textColorLink="#57b5ac"
            android:typeface="serif" />

        <RadioButton
            android:id="@+id/rbMessy"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Messy"
            android:textColorHighlight="#57b5ac"
            android:textColorLink="#57b5ac"
            android:typeface="serif" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginTop="10dp"
        android:text="Room Cleanliness:"
        android:textSize="18sp"
        android:typeface="serif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCreateRoommateProfile" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginTop="10dp"
        android:text="Smoking:"
        android:textSize="18sp"
        android:typeface="serif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rgCleanliness" />

    <RadioGroup
        android:id="@+id/rgSmoking"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <RadioButton
            android:id="@+id/rbSYes"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Yes"
            android:textColorHighlight="#57b5ac"
            android:textColorLink="#57b5ac"
            android:typeface="serif" />

        <RadioButton
            android:id="@+id/rbSSometimes"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Sometimes"
            android:textColorHighlight="#57b5ac"
            android:textColorLink="#57b5ac"
            android:typeface="serif" />

        <RadioButton
            android:id="@+id/rbSNo"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="No"
            android:textColorHighlight="#57b5ac"
            android:textColorLink="#57b5ac"
            android:typeface="serif" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/rgRoomUse"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <RadioButton
            android:id="@+id/rbSocial"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Social Space"
            android:textColorHighlight="#57b5ac"
            android:textColorLink="#57b5ac"
            android:typeface="serif" />

        <RadioButton
            android:id="@+id/rbStudy"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Study Space"
            android:textColorHighlight="#57b5ac"
            android:textColorLink="#57b5ac"
            android:typeface="serif" />

        <RadioButton
            android:id="@+id/rbSleeping"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Sleeping Space"
            android:textColorHighlight="#57b5Ac"
            android:textColorLink="#57b5ac"
            android:typeface="serif" />

        <RadioButton
            android:id="@+id/rbAll"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="All of the Above"
            android:textColorHighlight="#57b5ac"
            android:typeface="serif" />
    </RadioGroup>

    <AutoCompleteTextView
        android:id="@+id/etTimeSleep"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:textColorHighlight="#57b5ac"
        android:textColorLink="#57b5ac"
        android:typeface="serif"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <AutoCompleteTextView
        android:id="@+id/etTimeWake"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:textColorHighlight="#57b5ac"
        android:textColorLink="#57b5ac"
        android:typeface="serif"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutBio"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="315dp"
        android:layout_height="100dp"
        android:layout_marginTop="3dp"
        android:hint="Bio"
        app:counterEnabled="true"
        app:counterMaxLength="80"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etTimeSleep">

        <EditText
            android:id="@+id/etBio"
            android:layout_width="315dp"
            android:layout_height="75dp"
            android:textColorHighlight="#57b5ac"
            android:textColorLink="#57b5ac"
            android:typeface="serif">

        </EditText>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnCreateImagesContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Continue"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switchProfile" />

    <Switch
        android:id="@+id/switchProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Display Roommate Profile"
        android:textColor="#666666"
        android:textColorHighlight="#57b5ac"
        android:textColorLink="#57b5ac"
        android:textSize="18sp"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutBio"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginTop="10dp"
        android:text="Time Sleep:"
        android:textSize="18sp"
        android:typeface="serif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rgSmoking" />

    <TextView
        android:id="@+id/tvErrorAll2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Error: All fields must be completed"
        android:textColor="#FF0000"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCreateImagesContinue" />

    <TextView
        android:id="@+id/tvBioError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Error: Bio must be less than 80 characters"
        android:textColor="#FF0000"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvErrorAll2" />

    <ImageView
        android:id="@+id/imageView24"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:layout_marginTop="25dp"
        android:tint="#57B5Ac"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/search" />

    <ImageView
        android:id="@+id/imageView25"
        android:layout_width="16dp"
        android:layout_height="21dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="3dp"
        android:tint="#57b5Ac"
        app:layout_constraintEnd_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/tvCreateRoommateProfile"
        app:srcCompat="@drawable/broom" />

    <ImageView
        android:id="@+id/imageView26"
        android:layout_width="14dp"
        android:layout_height="23dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="1dp"
        android:tint="#57b5ac"
        app:layout_constraintEnd_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/tvCreateRoommateProfile"
        app:srcCompat="@drawable/door" />

    <ImageView
        android:id="@+id/imageView27"
        android:layout_width="15dp"
        android:layout_height="14dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="4dp"
        android:tint="#57b5Ac"
        app:layout_constraintEnd_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/imageView25"
        app:srcCompat="@drawable/smoking" />

    <ImageView
        android:id="@+id/imageView28"
        android:layout_width="20dp"
        android:layout_height="22dp"
        android:layout_marginTop="114dp"
        android:tint="#57b5Ac"
        app:layout_constraintEnd_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/imageView26"
        app:srcCompat="@drawable/drink" />

    <ImageView
        android:id="@+id/imageView29"
        android:layout_width="19dp"
        android:layout_height="26dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="93dp"
        android:layout_marginEnd="-1dp"
        android:tint="#57b5Ac"
        app:layout_constraintEnd_toStartOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView27"
        app:srcCompat="@drawable/moon" />

    <ImageView
        android:id="@+id/imageView30"
        android:layout_width="18dp"
        android:layout_height="21dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="3dp"
        android:tint="#57b5Ac"
        app:layout_constraintEnd_toStartOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/imageView28"
        app:srcCompat="@drawable/sun" />


</androidx.constraintlayout.widget.ConstraintLayout>